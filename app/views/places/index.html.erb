<div class="container mt-4">
  <h1>EPIC PARTY PLACES</h1>

  <div class="flex-container d-flex flex-wrap flex-direction-column">
    <% @places.each do |place| %>
        <div class="antialiased bg-gray-200 font-sans">
            <div class="max-w-6xl mx-auto">
                <div class="flex items-center justify-center min-h-screen">
                    <div class="max-w-sm w-full sm:w-1/2 lg:w-1/3 py-6 px-3">
                        <div class="bg-white shadow-xl rounded-lg overflow-hidden">
                            <div class="bg-cover bg-center h-56 p-4" style="background-image: url('<%= cl_image_path place.photos.first.key, height: 300, crop: :fill %>')">
                                <div class="flex justify-end">
                                    <svg class="h-6 w-6 text-white fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                        <path></path>
                                    </svg>
                                  </div>
                                </div>
                                <div class="p-4">
                                    <p class="uppercase tracking-wide text-sm font-bold text-gray-700"><%= link_to place.name, place_path(place.id) %></p>
                                    <p class="text-3xl text-gray-900"><%= link_to place.price, place_path(place.id) %></p>
                                    <p class="text-gray-700"><%= link_to place.location, place_path(place.id) %></p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
    <% end %>
      </div>
      <%= link_to new_place_path, class:'mt-5 btn btn-light btn-sm border' do %><i class="fa-solid fa-circle-plus"></i> Create new venue<% end %>
  </div>
</div>
